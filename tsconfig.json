{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es5",
    "declaration": true, // to generate .d.ts files for type definitions
    "jsx": "react-jsx", // or "react" depending on your JSX style
    "emitDeclarationOnly": false, // emits only .d.ts without .js
    "paths": {
      "./dist/GSquares.js": ["./dist/index.d.ts"]
    }
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"]
}
